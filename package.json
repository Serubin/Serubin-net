    "gulp-rename": "^2.0.0",
    "gulp-sass": "4.1.0",
    "gulp-shell": "^0.8.0",
    "gulp-sourcemaps": "2.6.5",
    "gulp-uglify": "3.0.2",
    "gulp-watch": "5.0.1",
    "gulp-zip": "5.0.2",
    "node-sass": "4.12.0",
    "pumpify": "^2.0.1"
